{
  "manifest_version": 3,
  "name": "darktechmeme",
  "version": "1.0.7",
  "description": "Dark mode styling for techmeme.com on Safari.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png",
    "256": "icons/icon-256.png",
    "512": "icons/icon-512.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://techmeme.com/*",
        "*://techmeme.com/m*",
        "*://www.techmeme.com/m*",
        "*://*.techmeme.com/*"
      ],
      "css": [
        "dark.css"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "host_permissions": [
    "*://techmeme.com/*",
    "*://techmeme.com/m*",
    "*://www.techmeme.com/m*",
    "*://*.techmeme.com/*"
  ]
}
